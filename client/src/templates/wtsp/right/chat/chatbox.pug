div
    .chat(@if='this.state.activeRoom')

        .head

            Avatar.img(name='{this.state.activeRoom.name}' size='50')

            .info

                p {this.state.activeRoom.name}
                
                p.online(v-if="onlineUsers.length > 1")
                    span(v-for="onlineUser in onlineUsers" v-if="user._id != onlineUser.id") Victor el salvaje
                        span.state.green &#8226; 

                p.online(v-else) Offline
                    span.state.red &#8226;

        .chat_box

            .chat_content#chat

                Messages(allMessages='{this.state.allMessages}')

            .modal(@if='this.state.modal')

                .container(@unless='this.state.photo')
                    label.upload_photo
                        i.material-icons file_upload
                        input(type="file" name="photo" onChange='{this.handleFileChange.bind(this)}')
                .container(@if='this.state.photo')
                    .preview
                        img(src="{this.state.photo}")
                        a(onClick="{this.resetPhoto.bind(this)}")
                            i.material-icons clear
            
        Send(chatId='{this.state.activeRoom.id}' modal='{this.state.modal}' toggleModal='{this.toggleModal.bind(this)}' roomType="{this.props.roomType === 'friends' ? 'friend' : 'group'}")